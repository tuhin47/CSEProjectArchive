      <section id="content">
        <div id="basicpostion">
          <h3>Basic Information</h3>
        </div>

        <table class="blueTable">
          <tbody>
            <tr>
              <td>Name :</td>
              <td>
              <input type="text" name="name" value="<%=results[0].name%>">
              </td>
            </tr>
            <tr>
              <td>Registration Number:</td>
              <td>
                <%=results[0].reg%>
              </td>
            </tr>
            <tr>
              <td>Email :</td>
              <td>
                <%=results[0].email%>
              </td>
            </tr>
            <tr>
              <td>Git :</td>
              <td>
                <a href="https://github.com/<%=results[0].git%>">
